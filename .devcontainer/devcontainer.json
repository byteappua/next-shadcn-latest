{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20.18.1" // 指定 Node.js 版本
    }
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "app-standard-preview",
      "visibility": "public",
      "requireLocalPort": true
    },
  },
  "updateContentCommand": "pnpm install",
  "postCreateCommand": "pnpm install",
  "postStartCommand":"cd public && git clone https://gitlab.in.hxr.com/nekocode/charting_library.git charting_git && mv charting_git/charting_library charting_library"
}
